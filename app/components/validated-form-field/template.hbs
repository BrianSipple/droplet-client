{{#if hasBlock}}
  {{yield (hash
    fieldId=fieldId
    shouldShowErrors=showErrorClass
    isValid=isValid)}}

{{else}}

  <label
    for={{fieldId}}
    class="c-form__field-label
           c-ripple-form-field__label
           o-grid-cell
           g-font-700
           g-inherit">
     {{label}}
   </label>

  <div class="c-validated-form-field__input-container
              c-ripple-form-field__content
              o-grid-cell
              u-relative">
    {{input
      class="c-validated-form-field__input
             u-b-box
             g-font-larger
             u-fill-width
             u-fill-height
             o-widget-box
             g-border-s1"
      classNameBindings="showErrorClass:has-error isValid"
      id=fieldId
      name=valuePath
      type=fieldType
      value=value
      placeholder=placeholder
      data-test-selector=testSelector
    }}

    <span class="c-validated-form-field__status-icon
                 u-absolute
                 u-width-spacing-4
                 u-fill-height
                 u-edge-right
                 u-edge-top
                 u-mr2
                 u-block">
      <span class="u-relative g-status--valid">
        {{#if isValid}}
          {{svg-icon iconURL="/assets/icons.svg#checkmark" stroke="currentColor" fill="none" class="c-validated-form__icon c-validated-form__icon--success"}}
        {{/if}}
      </span>
    </span>
  </div>

  {{#if showMessage}}
    <div class="g-status--error">
      {{v-get model valuePath 'message'}}
    </div>

  {{/if}}

{{/if}}
